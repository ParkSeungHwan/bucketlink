<div class="row mx-0">
  <div class="col-12 col-md-6 form-img mb-3">
   <%= f.file_field :img, required: true, id: 'imgInp', class: 'form-control', placeholder:'image' %>
   <div class="form-info d-flex align-items-center justify-content-center">
     <i class="fa fa-image fa-3x mb-3"></i>
     <p><b>고화질 이미지를 첨부해주세요</b> <br>추천 규격 1200px X 600px </p>
   </div>
   <div class="form-info text-center">
     <img id="blah" src="">
   </div>
  </div>
   <div class="col-12 col-md-6 form-group">
    <%= f.text_field :title, required: true, class: 'form-control mb-3', placeholder:'실천한 버킷리스트'%>
    <%= f.text_area :content, required: true, class: 'form-control', placeholder:'실천한 버킷리스트 아이템에 대한 자세한 설명' %>
  </div>
</div>

<script>
  function readURL(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();

      reader.onload = function(e) {
        $('.form-info.d-flex').remove();
        $('#blah').attr('src', e.target.result);
      }

      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#imgInp").change(function() {
    readURL(this);
  });
</script>
